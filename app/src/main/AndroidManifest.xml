<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dmtaiwan.alexander.beirecipes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BeiRecipe">
        <activity android:name=".ui.MainActivity"
                  android:theme="@style/BeiRecipe.MainAcivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.RecipeActivity"
            android:theme="@style/BeiRecipe.RecipeAcivity"/>

        <activity android:name=".ui.EditRecipeActivity"
            android:theme="@style/BeiRecipe.EditRecipeAcivity"/>
    </application>

</manifest>