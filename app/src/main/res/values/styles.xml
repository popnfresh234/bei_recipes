<resources>

    <!-- Base application theme. -->
    <style name="BeiRecipe" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="BeiRecipe.MainAcivity" parent="BeiRecipe">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BeiRecipe.RecipeAcivity" parent="BeiRecipe">
        <item name="android:windowBackground">@color/dark_theme_primary_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BeiRecipe.EditRecipeAcivity" parent="BeiRecipe">
        <item name="android:windowBackground">@color/dark_theme_primary_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="TextAppearance.GridPrimary" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeightHint">20sp</item>
        <item name="font">roboto-mono-regular</item>
    </style>

    <style name="TextAppearance.GeneralText" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="font">roboto-mono-regular</item>
    </style>

    <style name="TextAppearance.GeneralText.Small" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="TextAppearance.GeneralText.Tiny" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:textSize">@dimen/tiny_text</item>
    </style>


    <style name="TextAppearance.TinyText" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="font">roboto-mono-regular</item>
        <item name="android:textSize">@dimen/tiny_text</item>
        <item name="android:textColor">@color/app_compat_light_text</item>
    </style>


    <style name="DarkOverlay" parent="@android:style/ThemeOverlay.Material.Dark.ActionBar">
        <!-- Used to theme dark elements in light themed screens.
             Extend the material dark Action Bar overlay as this contains text styling. -->
    </style>

    <!--toolbar styling-->

    <style name="Widget.BeiRecipes" parent="android:Widget"/>

    <style name="Widget.BeiRecipes.Toolbar">
        <item name="android:titleTextAppearance">
            @android:style/TextAppearance.Material.Widget.ActionBar.Title
        </item>
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:elevation">@dimen/z_app_bar</item>
        <item name="android:theme">@style/DarkOverlay</item>
    </style>

    <style name="Widget.BeiRecipes.Toolbar.SmallCapsTitle">
        <item name="android:titleTextAppearance">@style/TextAppearance.ToolbarTitleSmallCaps</item>
    </style>

    <style name="Widget.BeiRecipes.HomeToolbar" parent="Widget.BeiRecipes.Toolbar.SmallCapsTitle">
        <item name="android:background">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:theme">@android:style/ThemeOverlay.Material.Dark</item>
    </style>

    <style name="TextAppearance.ToolbarTitleSmallCaps" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

</resources>
