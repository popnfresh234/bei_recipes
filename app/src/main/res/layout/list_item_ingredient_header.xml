<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.dmtaiwan.alexander.beirecipes.ui.views.BaselineGridTextView
        style="@style/TextAppearance.TinyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/text_view_ingredient_name"/>

    <com.dmtaiwan.alexander.beirecipes.ui.views.BaselineGridTextView
        style="@style/TextAppearance.TinyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/text_view_ingredient_count"/>

    <com.dmtaiwan.alexander.beirecipes.ui.views.BaselineGridTextView
        style="@style/TextAppearance.TinyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/text_view_ingredient_unit"/>

    <com.dmtaiwan.alexander.beirecipes.ui.views.BaselineGridTextView
        style="@style/TextAppearance.TinyText"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="@string/text_view_ingredient_proportion"/>


</LinearLayout>