<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


    <com.dmtaiwan.alexander.beirecipes.ui.views.BaselineGridTextView
        style="@style/TextAppearance.GeneralText"
        android:id="@+id/holder_ingredient_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/tiny_text" />

    <com.dmtaiwan.alexander.beirecipes.ui.views.BaselineGridTextView
        style="@style/TextAppearance.GeneralText"
        android:id="@+id/holder_ingredient_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal" />



    <com.dmtaiwan.alexander.beirecipes.ui.views.BaselineGridTextView
        style="@style/TextAppearance.GeneralText.Small"
        android:id="@+id/holder_units"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.dmtaiwan.alexander.beirecipes.ui.views.FontEditText
        style="@style/TextAppearance.GeneralText"
        android:focusable="false"
        android:id="@+id/holder_proportional_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/edit_text_quantity"
        android:inputType="numberDecimal" />

    <Button
        style="@style/TextAppearance.GeneralText"
        android:id="@+id/holder_button_ok"
        android:text="@string/button_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>


</LinearLayout>